{
  "permissions": {
    "allow": [
      "Skill(plugin-dev:skill-development)",
      "Skill(plugin-dev:plugin-structure)",
      "Skill(plugin-dev:create-plugin)",
      "Skill(plugin-dev:hook-development)",
      "Skill(plugin-dev:agent-development)",
      "WebSearch",
      "WebFetch(domain:workos.com)",
      "WebFetch(domain:docs.convex.dev)",
      "WebFetch(domain:zod.dev)",
      "Bash(bun install:*)",
      "Bash(bun run build:*)",
      "Bash(bun run typecheck:*)",
      "Bash(bun test:*)",
      "Bash(UPDATE_SNAPSHOTS=1 bun test:*)",
      "Bash(bun run lint:*)",
      "Bash(bun run lint:fix:*)",
      "Bash(bun run dev)",
      "Bash(bun run cli:build)",
      "Bash(bun hive-mind/cli/cli.ts:*)",
      "mcp__convex"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "plugin-dev@claude-plugins-official": true,
    "vercel@claude-plugins-official": true,
    "playwright@claude-plugins-official": true
  }
}
